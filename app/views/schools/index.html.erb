<div class="page-header">
  <%= link_to new_school_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New School
  <% end %>
  <h1>Listing schools</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th></th>
        <th></th>
        <% if can? :delete, School %>
          <th></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @schools) do |school| %>
            <td><%= school.name %></td>
            <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <% if can? :delete, School %> 
          <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
