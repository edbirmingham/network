<% content_for :page_header do %>
  <%= link_to common_tasks_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_common_task_path(@common_task), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
<% end %>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @common_task.name %></dd>

  <dt>Owner:</dt>
  <dd><%= @common_task.owner.try(:email) %></dd>
  
  <dt>Date Modifier:</dt>
  <dd><%= @common_task.date_modifier %></dd>
  
  <dt>Creator:</dt>
  <dd><%= @common_task.user.try(:email) %></dd>

</dl>
