<% content_for :page_header do %>
  <div>
      <%= select_tag :member_ids, 
            options_from_collection_for_select([], :id, :text),
            class: "select2 ajax form-control", 
            multiple: false, 
            data: { ajax: { url: members_path }, placeholder: 'Find Member' }  %>
  </div>
  <%= content_for :title, t(".title", name: @network_event.name) %>
<% end %>

<div id="create">
  <%= render 'create' %>
</div>
<div id="confirm">
  <%= render 'confirm' %>
</div>
